@model UserModel
@using System.Data

<div class="pagetitle">
    <h1>User Forms</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item">User</li>
            <li class="breadcrumb-item active">Add Edit</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Add/Edit</h5>

                    <!-- Horizontal Form -->
                    <form>
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="text-danger">*</span>User Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control border border-black" asp-for="UserName" placeholder="User Name" id="inputText">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control  border border-black" asp-for="Password" placeholder="Password" id="inputEmail">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Email ID</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control  border border-black" asp-for="Email" placeholder="Email ID" id="inputEmail">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputEmail3" class="col-sm-2 col-form-label"><span class="text-danger">*</span>Mobile No</label>
                            <div class="col-sm-10">
                                <input type="tel" class="form-control border border-black" asp-for="Mobile" placeholder="Mobile No" id="inputEmail">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>
                        </div>
                        <div class="text-start">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="UserList" asp-controller="User" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form><!-- End Horizontal Form -->
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <a href="~/lib/jquery/dist/jquery.min.map">~/lib/jquery/dist/jquery.min.map</a>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}